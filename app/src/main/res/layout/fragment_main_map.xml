<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_map_background"
    tools:context=".view.fragment.MainMapFragment">


    <FrameLayout
        android:id="@+id/mainMapContainer"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/btnBackFromMainMap"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_left_arrow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnBackFromMainMap"
        app:layout_constraintTop_toTopOf="@+id/btnBackFromMainMap"
        app:layout_constraintBottom_toBottomOf="@id/btnBackFromMainMap"/>

</androidx.constraintlayout.widget.ConstraintLayout>