<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:focusable="auto"
        android:background="@drawable/card_item_linear_background">

        <ImageView
            android:id="@+id/CarouserItemImgView"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pintura01" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/sombra"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bodegon 01"
            android:fontFamily="@font/rowdies"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIMENSIONES: 34.5 x 45 cm."
            android:textSize="10sp"
            android:fontFamily="@font/rowdies"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/item_technique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rowdies"
            android:text="Acuarela"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
